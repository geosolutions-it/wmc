<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_column"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/site_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bordered_button"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/title_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/wmc_site"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/code_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/code_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/wmc_code"/>

            <EditText
                android:id="@+id/code_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bordered_button"
                android:paddingLeft="2dp"
                android:inputType="number|numberDecimal"
                android:imeOptions="actionDone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/curr_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/curr_time_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/wmc_curr_time"/>

            <EditText
                android:id="@+id/curr_time_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bordered_button"
                android:focusable="false"
                android:paddingLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/curr_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/curr_date_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/wmc_curr_date"/>

            <EditText
                android:id="@+id/curr_date_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bordered_button"
                android:focusable="false"
                android:paddingLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delivery_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/delivery_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/wmc_delivery"/>

            <EditText
                android:id="@+id/delivery_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bordered_button"
                android:focusable="false"
                android:paddingLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sync_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight=".6" />

            <Button
                android:id="@+id/sync_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/button_sync" />
        </LinearLayout>

    </LinearLayout> <!-- site -->

    <LinearLayout
        android:id="@+id/overall_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bordered_button"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/title_overall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wmc_overall"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/overall_total_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/overall_total_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/wmc_total"/>

            <EditText
                android:id="@+id/overall_total_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bordered_button"
                android:focusable="false"
                android:paddingLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/overall_ts1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/overall_ts1_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/wmc_ts_1"/>

            <EditText
                android:id="@+id/overall_ts1_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bordered_button"
                android:focusable="false"
                android:paddingLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/overall_ts2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/overall_ts2_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/wmc_ts_2"/>

            <EditText
                android:id="@+id/overall_ts2_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bordered_button"
                android:focusable="false"
                android:paddingLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/preset_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/preset_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/wmc_overall_preset"/>

            <EditText
                android:id="@+id/preset_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bordered_button"
                android:inputType="numberDecimal|numberSigned"
                android:paddingLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/preset_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/digits_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_weight=".4"
                android:entries="@array/preset_values"/>

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight=".2"/>

            <Button
                android:id="@+id/button_preset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight=".4"
                android:text="@string/button_preset"/>

        </LinearLayout>

    </LinearLayout><!-- overall -->

    <LinearLayout
        android:id="@+id/counter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bordered_button"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/title_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wmc_counter"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/counter_total_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/counter_total_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/wmc_total"/>

            <EditText
                android:id="@+id/counter_total_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bordered_button"
                android:focusable="false"
                android:paddingLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/counter_ts1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/counter_ts1_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/wmc_ts_1"/>

            <EditText
                android:id="@+id/counter_ts1_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bordered_button"
                android:focusable="false"
                android:paddingLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/counter_ts2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/counter_ts2_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/wmc_ts_2"/>

            <EditText
                android:id="@+id/counter_ts2_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bordered_button"
                android:focusable="false"
                android:paddingLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/clear_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/weekday_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_weight=".4"
                android:entries="@array/weekday_values"
                android:focusable="false"/>

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight=".2"/>

            <Button
                android:id="@+id/button_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight=".4"
                android:text="@string/button_clear"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/graph_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight=".6"/>

            <Button
                android:id="@+id/button_graph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight=".4"
                android:text="@string/button_graph"/>
        </LinearLayout>

    </LinearLayout><!-- counter -->

</LinearLayout>